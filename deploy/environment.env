# F1 Fantasy Test Stack Environment Configuration
# Copy this file to /opt/f1fantasy/.env and customize the values

# Security Keys (MUST CHANGE THESE!)
SECRET_KEY=your-test-secret-key-change-this
SECURITY_PASSWORD_SALT=your-test-salt-change-this-too

# Database Configuration - Using SQLite for test stack
DATABASE_URL=sqlite:////opt/f1fantasy/data/f1fantasy_test.db

# Mail Configuration (optional for test)
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@f1fantasy.test

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# F1 API Configuration
F1_API_KEY=your-f1-api-key-if-needed

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/f1fantasy/app.log

# Test Environment Settings
FLASK_ENV=testing

# Domain Configuration
DOMAIN=f1fantasy.local  # Change to your actual domain 